@model IList<VladimirTripAdvisor.ViewModels.ObjectWithPhotoViewModel>
@{
    ViewData["Title"] = "Каталог объектов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Каталог объектов</h2>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">

            @foreach (var obj in Model)
            {
                <div class="col" >
                    <div class="card border-success" style="width: 36rem; height:650px">
                        <img src="data:image/jpg;base64, @obj.ImageMainBase64" class="card-img-top rounded mx-auto d-block" style="height:400px" alt="...">
                        <div class="card-body">
                            <h5 class="card-title text-center">@obj.Place.Name</h5>
                            <p class="card-text" style="text-align:justify">@obj.Place.ShortDescription</p>
                            <a asp-controller="Object" asp-route-Id="@obj.Place.Id" asp-action="ViewObject" class="btn btn-primary">
                                Открыть
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

    }
    else
    {
        <p>Список пустой</p>
    }
</div>

