                <div class="carousel-inner">
                    <div class="carousel-item active"><img class="w-100 d-block" src="data:image/jpg;base64, @Model.Images.First()" alt="Slide Image" style="height: 450px; width:750px" /></div>
                    @for (int i = 1; i < Model.Images.Count; i++)
                    {
                        <div class="carousel-item" data-bs-interval="">
                            <img class="w-100 d-block" src="data:image/jpg;base64, @Model.Images[i]" alt="Slide Image" style="height: 450px; width:750px" />
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
